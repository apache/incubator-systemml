source("../triangular_inv.dml") as inv

N = 1000
A = rand(rows=N, cols=N)

# create lower/upper triangular matrices

[P,L,U] = lu(A)

# calculate inverse

Linv = inv::L_triangular_inv(L)
Uinv = inv::U_triangular_inv(U)

# trace of product must be equal to N
print("err = (N - tr(L * Linv))/N = " + abs(N - trace(L %*% Linv))/N)
print("err = (N - tr(U * Uinv))/N = " + abs(N - trace(U %*% Uinv))/N)
