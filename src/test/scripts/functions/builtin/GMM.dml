# X = read($1)
X = read($1, data_type = "matrix", format = "csv")
X = X[, 1:4]
prob = gmm(X=X, components = $2, iter = $3,  model = $4, eps = $5, verbose=TRUE)
out = (rowMaxs(prob) < 0.7)
print("outlier"+toString(out))
maxi = (prob == rowMaxs(prob))
cluster = colSums(maxi)
clusMean = matrix(0, ncol(prob), ncol(X))
for(i in 1:ncol(prob))
{
  iPoints = colSums(X * maxi[,i])
  clusMean[i,] = iPoints/cluster[1,i]
}


print("this is cluster "+toString(cluster))
print("this is mean "+toString(clusMean))
write(prob, $6)
# out = rowSums(t(clusMean))
write(out, $7)
