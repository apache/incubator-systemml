source("scalable_linalg/lu.dml") as decomp
source("utils.dml") as utils

N = 1000

# create symmetric random matrix
A = rand(rows=N, cols=N, min=-1.0, max=1.0, pdf="uniform")

[P, L, U] = decomp::LU(A, 100)

# check if PA = LU. Frobenius norm of PA - LU must be zero
diff = P %*% A - L %*% U
frobenius_norm = sum(diff * diff)
if (frobenius_norm > 1e-6) {
  print("ERROR: test fails for LU decomposition")
}
